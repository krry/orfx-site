---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts'))
  .filter(post => post.data.status === 'published')
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Posts â€” orfx" description="Long-form writings, essays, and reflections.">
  <div class="space-y-12">
    <section class="py-12 space-y-4">
      <h1 class="text-5xl font-bold text-amber-400">Posts</h1>
      <p class="text-xl text-slate-300">
        Long-form writings, essays, and reflections on the strange beauty of becoming.
      </p>
    </section>

    {posts.length > 0 ? (
      <section class="space-y-6">
        <div class="grid gap-6">
          {posts.map(post => (
            <article class="border border-slate-800 rounded-lg p-6 hover:border-amber-400/50 transition group">
              <a href={`/posts/${post.slug}`} class="block group-hover:text-amber-400 transition">
                <h3 class="text-2xl font-bold mb-2 text-amber-400">{post.data.title}</h3>
              </a>
              <p class="text-slate-400 mb-4">{post.data.description}</p>
              <div class="flex items-center justify-between text-sm text-slate-500">
                <time datetime={post.data.date.toISOString()}>
                  {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
                {post.data.tags && (
                  <div class="flex gap-2">
                    {post.data.tags.map(tag => (
                      <span class="bg-slate-800 px-2 py-1 rounded text-xs text-amber-400">
                        #{tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </article>
          ))}
        </div>
      </section>
    ) : (
      <section class="text-center py-12">
        <p class="text-slate-400">No posts yet. Coming soon.</p>
      </section>
    )}
  </div>
</Layout>
