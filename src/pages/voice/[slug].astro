---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const voiceDrafts = await getCollection('voice-drafts');
  return voiceDrafts.filter(draft => draft.data.status === 'published').map(draft => ({
    params: { slug: draft.data.slug || draft.slug },
    props: { draft },
  }));
}

interface Props {
  draft: (typeof voiceDrafts)[number];
}

const { draft } = Astro.props;
const { Content } = await draft.render();

type VoiceDraft = Awaited<ReturnType<typeof getCollection<'voice-drafts'>>>[number];
const voiceDrafts: VoiceDraft[] = [];
---

<Layout title={draft.data.title} description={draft.data.description}>
  <article class="space-y-8 prose prose-invert max-w-none">
    {/* Header */}
    <header class="space-y-4 pb-8 border-b border-slate-800">
      <div class="space-y-2">
        <h1 class="text-4xl font-bold text-amber-400">{draft.data.title}</h1>
        <p class="text-lg text-slate-400">{draft.data.description}</p>
      </div>
      
      <div class="flex flex-col gap-4 text-sm text-slate-700 dark:text-slate-300">
        <div class="flex items-center justify-between">
          <time datetime={draft.data.date.toISOString()}>
            {draft.data.date.toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </time>
          {draft.data.updated && (
            <span class="text-xs text-slate-600">
              Updated {draft.data.updated.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric' 
              })}
            </span>
          )}
        </div>

        {/* Influences & Tags */}
        <div class="flex flex-wrap gap-3">
          {draft.data.influences && draft.data.influences.length > 0 && (
            <div class="flex flex-wrap gap-2">
              <span class="text-slate-600">Influences:</span>
              {draft.data.influences.map(influence => (
                <span key={influence} class="text-amber-400/75">
                  {influence}
                </span>
              ))}
            </div>
          )}
        </div>

        {draft.data.tags && draft.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {draft.data.tags.map(tag => (
              <span key={tag} class="bg-slate-800/50 px-2 py-1 rounded text-xs text-amber-400/75">
                #{tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </header>

    {/* Content */}
    <div class="prose prose-invert prose-sm sm:prose-base max-w-none [&>*]:text-slate-200 [&>h2]:text-amber-400 [&>h3]:text-amber-400 [&>a]:text-amber-400 [&>a:hover]:text-amber-300 [&>blockquote]:text-slate-300 [&>blockquote]:border-amber-400/50">
      <Content />
    </div>

    {/* Navigation */}
    <nav class="pt-8 border-t border-slate-800">
      <a href="/voice" class="inline-block px-4 py-2 border border-amber-400 text-amber-400 rounded hover:bg-amber-400 hover:text-slate-950 transition">
        ‚Üê Back to Voice
      </a>
    </nav>
  </article>
</Layout>

<style is:global>
  .prose {
    color: inherit;
  }

  .prose p {
    margin-bottom: 1.5rem;
    line-height: 1.75;
  }

  .prose pre {
    background-color: rgb(15, 23, 42);
    border: 1px solid rgb(30, 41, 59);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }

  .prose code {
    background-color: rgb(15, 23, 42);
    border-radius: 0.25rem;
    padding: 0.125rem 0.375rem;
    font-size: 0.9em;
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
  }
</style>
