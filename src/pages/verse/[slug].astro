---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const verses = await getCollection('verses');
  return verses
    .filter((verse) => verse.data.status === 'published')
    .map((verse) => ({
      params: { slug: verse.data.slug || verse.slug },
      props: { verse },
    }));
}

type Verse = Awaited<ReturnType<typeof getCollection<'verses'>>>[number];

interface Props {
  verse: Verse;
}

const { verse } = Astro.props;
const { Content } = await verse.render();

const recentVerses = (await getCollection('verses'))
  .filter((v) => v.data.status === 'published')
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .filter((v) => (v.data.slug || v.slug) !== (verse.data.slug || verse.slug))
  .slice(0, 10);
---

<Layout title={verse.data.title} description={verse.data.description}>
  <div class="grid gap-10 lg:grid-cols-[1fr_18rem]">
    <article class="space-y-8 prose prose-invert max-w-none">
    {/* Header */}
    <header class="space-y-4 pb-8 border-b border-slate-800">
      <div class="space-y-2">
        <h1 class="text-4xl font-bold text-amber-400">{verse.data.title}</h1>
        <p class="text-lg text-slate-400">{verse.data.description}</p>
      </div>

      <div class="flex flex-col gap-4 text-sm text-slate-700 dark:text-slate-300">
        <div class="flex items-center justify-between">
          <time datetime={verse.data.date.toISOString()}>
            {verse.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          {verse.data.updated && (
            <span class="text-xs text-slate-600">
              Updated {verse.data.updated.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
              })}
            </span>
          )}
        </div>

        {/* Influences & Tags */}
        <div class="flex flex-wrap gap-3">
          {verse.data.influences && verse.data.influences.length > 0 && (
            <div class="flex flex-wrap gap-2">
              <span class="text-slate-600">Influences:</span>
              {verse.data.influences.map(influence => (
                <span class="text-amber-400/75">
                  {influence}
                </span>
              ))}
            </div>
          )}
        </div>

        {verse.data.tags && verse.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {verse.data.tags.map(tag => (
              <span class="bg-slate-800/50 px-2 py-1 rounded text-xs text-amber-400/75">
                #{tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </header>

    {/* Content */}
    <div class="prose prose-invert prose-sm sm:prose-base max-w-none [&>*]:text-slate-200 [&>h2]:text-amber-400 [&>h3]:text-amber-400 [&_a]:text-amber-400 [&_a:hover]:text-amber-300 [&>blockquote]:text-slate-300 [&>blockquote]:border-amber-400/50">
      <Content />
    </div>

    {/* Navigation */}
    <nav class="pt-8 border-t border-slate-800">
      <a
        href="/verse"
        class="inline-block px-4 py-2 border border-amber-400 text-amber-400 rounded hover:bg-amber-400 hover:text-slate-950 transition"
      >
        ← Back to Verses
      </a>
    </nav>
    </article>

    <aside class="lg:sticky lg:top-24 h-fit">
      <div class="border border-slate-800 rounded-lg p-4 bg-slate-950/30">
        <h2 class="text-sm font-semibold text-slate-300 mb-3">Recent verses</h2>
        <ol class="space-y-2">
          {recentVerses.map((v) => (
            <li class="leading-snug">
              <a
                href={`/verse/${v.data.slug || v.slug}`}
                class="block text-sm text-amber-400/90 hover:text-amber-300"
              >
                {v.data.title}
              </a>
              <time
                class="block text-xs text-slate-500"
                datetime={v.data.date.toISOString()}
              >
                {v.data.date.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </time>
            </li>
          ))}
        </ol>
        <a
          href="/verse"
          class="mt-4 inline-block text-xs text-slate-400 hover:text-slate-200"
        >
          View all →
        </a>
      </div>
    </aside>
  </div>
</Layout>

<style is:global>
  .prose {
    color: inherit;
  }

  .prose p {
    margin-bottom: 1.5rem;
    line-height: 1.75;
  }

  .prose pre {
    background-color: rgb(15, 23, 42);
    border: 1px solid rgb(30, 41, 59);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }

  .prose code {
    background-color: rgb(15, 23, 42);
    border-radius: 0.25rem;
    padding: 0.125rem 0.375rem;
    font-size: 0.9em;
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
  }
</style>
