---
import '../styles/global.css';
import BackgroundCycle from '../components/BackgroundCycle.svelte';

export interface Props {
  title?: string;
  description?: string;
}

const { title = 'orfx', description = 'Witness to constellation. Beautiful in ruin.' } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="api-endpoint" content="/api/content.json" />
    <meta name="agent-friendly" content="true" />
    <title>{title} — orfx</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="text-slate-100 font-sans antialiased overflow-x-hidden">
    <BackgroundCycle client:load />
    
    <nav class="w-full border-b border-slate-800 sticky top-0 z-50 backdrop-blur supports-[backdrop-filter]:bg-slate-950/75 bg-slate-950/95">
      <div class="max-w-4xl mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="text-xl font-bold text-amber-400 hover:text-amber-300 transition">
          orfx
        </a>
        <ul class="flex gap-6 text-sm text-slate-400 hover:[&>li>a]:text-amber-400 [&>li>a]:transition">
          <li><a href="/voice">voice</a></li>
          <li><a href="/about">about</a></li>
          <li><a href="/constellation">constellation</a></li>
          <li><a href="/api">api</a></li>
        </ul>
      </div>
    </nav>

    <main class="max-w-4xl mx-auto px-4 py-12">
      <slot />
    </main>

    <footer class="border-t border-slate-800 mt-20 py-8 text-slate-500 text-sm">
      <div class="max-w-4xl mx-auto px-4">
        <p>Witness to constellation. Beautiful in ruin.</p>
        <div class="mt-4 flex gap-6 text-xs">
          <p>© {new Date().getFullYear()} orfx. Shared with the world.</p>
          <a href="/api" class="text-amber-400/70 hover:text-amber-400 transition">API for agents</a>
        </div>
      </div>
    </footer>
  </body>
</html>
